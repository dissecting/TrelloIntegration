<aura:component controller="KanbanBoardController" implements="flexipage:availableForAllPageTypes" access="global">
    <ltng:require styles="{!$Resource.materialize + '/materialize/css/materialize.css'}"/>

    <aura:attribute name="kanbanData" type="KanbanBoardController.KanbanBoard"/>

    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>

    <div class="slds-page-header">
        <div class="slds-media">
            <div class="slds-media__figure">
                <span class="slds-icon_container" title="Description of icon when needed">
                    <lightning:icon iconName="utility:kanban" variant="bare" size="small"/>
                </span>
            </div>
            <div class="slds-media__body">
                <h1 class="slds-page-header__title slds-truncate slds-align-middle" title="Kanban">Kanban</h1>
            </div>
        </div>
    </div>
    <div style="padding:0.5rem;">
        <aura:iteration var="status" items="{!v.kanbanData.statusList}" indexVar="index">
            <div class="stageContainer">
                <div class="slds-grid slds-grid_vertical">
                    <div class="slds-media slds-no-space slds-has-divider_bottom-space slds-media_center">
                        <div class="slds-media__body">
                            <h1 class="slds-page-header__title slds-align-middle slds-truncate" title="{!status}">{!status}</h1>
                        </div>
                    </div>
                </div>
                <ul ondrop="{!c.doDrop}"
                    ondragover="{!c.allowDrop}"
                    class="slds-has-dividers_around-space dropZone"
                    data-status="{!status}"
                    data-index="{!index}"
                    style="height:70vh;overflow-y:auto;">
                    <aura:iteration var="objRecord" items="{!v.kanbanData.cardList}">
                        <aura:if isTrue="{!status == objRecord.Status__c}">
                            <li class="slds-item slds-m-around_small" draggable="true" ondragstart="{!c.doDrag}" id="{!objRecord.Id}">
                                <article class="slds-tile slds-tile_board">
                                    <h3 class="slds-truncate" title="{!objRecord.Name}">
                                        <a href="javascript:void(0);" onclick="{!c.doView}">
                                            <span class="slds-truncate" id="{!objRecord.Id}">{!objRecord.Name}</span>
                                        </a>
                                    </h3>
                                </article>
                            </li>
                        </aura:if>
                    </aura:iteration>
                </ul>
            </div>
        </aura:iteration>
   </div>
</aura:component>
